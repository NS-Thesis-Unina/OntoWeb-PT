{
  "name": "nodejs",
  "private": true,
  "version": "1.0.0",
  "description": "NodeJS (Backend)",
  "author": "Francesco Scognamiglio | Felice Micillo",
  "license": "ISC",
  "type": "commonjs",
  "main": "src/server.js",
  "scripts": {
    "dev:api": "nodemon src/server.js",
    "dev:worker": "nodemon src/worker.js",
    "dev:all": "concurrently -n api,worker -c green,blue \"npm:dev:api\" \"npm:dev:worker\"",
    "start:api": "node src/server.js",
    "start:worker": "node src/worker.js",
    "start:all": "concurrently -n api,worker -c green,blue \"npm:start:api\" \"npm:start:worker\"",
    "test": "jest --detectOpenHandles",
    "test:unit": "jest _tests/unit --detectOpenHandles",
    "test:integration": "jest _tests/integration --detectOpenHandles",
    "test:e2e": "jest _tests/e2e --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles"
  },
  "dependencies": {
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "axios": "^1.7.7",
    "bullmq": "^5.7.0",
    "celebrate": "^15.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "ioredis": "^5.8.2",
    "nanoid": "^5.0.7",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/node": "^24.9.1",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4"
  }
}
